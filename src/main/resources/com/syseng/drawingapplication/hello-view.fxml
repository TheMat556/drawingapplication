<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.canvas.Canvas?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.syseng.drawingapplication.HelloController">
  <padding>
    <Insets top="10.0"/>
  </padding>

  <HBox spacing="10.0" alignment="CENTER">
    <RadioButton text="Rectangle" fx:id="optionRectangleRadioButton"/>
    <RadioButton text="Line" fx:id="optionLineRadioButton"/>
  </HBox>

  <!-- Add a Canvas for drawing -->
  <Canvas fx:id="drawingCanvas" width="400" height="400"/>
</VBox>
